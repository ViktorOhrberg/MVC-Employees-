@model EmployeeIndexVM[]
@{ ViewBag.Title = "Employees";
    ViewBag.Header = "List of employees";
}

<h1> </h1>
<table>
    <tr style="background-color:cadetblue">
        <th>ID</th>
        <th>Namn</th>
        <th>Email</th>
        <th></th>
    </tr>

    @foreach (var emp in Model)
    {
        <tr>
            <th>
                <a href="/index/@emp.Id">
                    @emp.Id
                </a>
            </th>
            <th style=@(emp.ShowAsHighlighted ?"color:red" : "")>
                @emp.Name
            </th>
            <th>
                @emp.Email
            </th>
            <th>
                <a href="/delete/@emp.Id">
                    Delete
                </a>
            </th>

        </tr>
    }
</table>
